<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/holo_orange_light"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/book.search.introduction"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/bookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/book.search.bookName.hint" />

    <EditText
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/book.search.author.hint"
        android:imeOptions="actionDone" />

    <EditText
        android:id="@+id/containingWordOrPhrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/book.search.bookContainsWord.hint"
        android:imeOptions="actionDone" />

    <EditText
        android:id="@+id/isbn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:gravity="center"
        android:hint="@string/book.search.isbn.hint"
        android:imeOptions="actionDone" />

    <Button
        android:id="@+id/search"
        style="@style/Button.BlackText.YellowBackground"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/book.search.startSearch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/createdBy"
        android:textColor="@android:color/black"
        android:textSize="15sp" />


</LinearLayout>